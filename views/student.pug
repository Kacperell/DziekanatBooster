extends layout
block content
    if(message)
      h1 #{email}
      h2 #{message}
    .mp-form-container
      form.mp-form(method='POST' action='/student' class="addVisitForm")
        .mp-form__input-container
          .mp-form__input-container--icon
            img(src='../images/callendar.svg' width='24px' height='24px')
          input.mp-form__input-container--field(type='date' name='time' required='' class="dataPicker")
        .mp-form__input-container
          .mp-form__input-container--icon
            img(src='../images/clock.svg' width='24px' height='24px')
          //- input.mp-form__input-container--field(type='date' name='time' placeholder='Time' required='' class="dataPicker")
          select.timePicker
            //- option(default) Wybierz GodzinÄ™
            option(value='11:00') 11:00
            option(value='11:15') 11:15
            option(value='11:30') 11:30
            option(value='11:45') 11:45
            option(value='12:00') 12:00
            option(value='12:15') 12:15
            option(value='12:30') 12:30
        .mp-form__input-container
          .mp-form__input-container--icon
            img(src='../images/category4.png' width='24px' height='24px')
          //- input.mp-form__input-container--field(type='date' name='time' placeholder='Time' required='' class="dataPicker")
          select.categorySelect
            option(default value='inne') Wybierz kategorie
            option(value='PodbicieLegitymacji') Podbicie Legitymacji
            option(value='stypendium') Stypendium
            option(value='inne') Inne

          
  

        button.mp-button.mp-form__input--submit(type='submit') Dodaj do kolejki
    
    .mp-visitsList
      ul
    
    
    .mp-footer
      img.mp-footer__logo(src='../images/zutlogo.png' alt='zut logo')
      h4.mp-footer__text Moze kolejka tu bedzie w stopce
      .mp-footer__rightcorner




    a(href='/signOut') Wyloguj
